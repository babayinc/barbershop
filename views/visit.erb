<h2>Visit</h2>
<form action="/visit" method="POST" role="form">
  <div class="form-group">
    <label>Your name</label>
    <input id="aaa" name="user_name" type="text" class="form-control" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label>Your phone</label>
    <input name="phone" type="text" class="form-control" placeholder="Enter phone">
  </div>
  <div class="form-group">
    <label>When you come</label>
    <input name="date_time" type="text" class="form-control" placeholder="Enter date and time">
  </div>
  <div class="form-group">
    <label>Select barber</label>
    <% @@masters.each_key do |master| %>
	    <div class="radio">
  	    <label>
          <input type="radio" name=optionsRadios value=<%= master %>>
            <%= @@masters[master] %>
        </label>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <label>Select barber</label>
    <select name="master_select" class="form-control">
      <% @@masters.each_key do |master| %>
   	    <option><%= @@masters[master] %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>

  <select id="color" name="color">
    <option value="#7bd148">Green</option>
    <option value="#5484ed">Bold blue</option>
    <option value="#a4bdfc">Blue</option>
    <option value="#46d6db">Turquoise</option>
    <option value="#7ae7bf">Light green</option>
    <option value="#51b749">Bold green</option>
    <option value="#fbd75b">Yellow</option>
    <option value="#ffb878">Orange</option>
    <option value="#ff887c">Red</option>
    <option value="#dc2127">Bold red</option>
    <option value="#dbadff">Purple</option>
    <option value="#e1e1e1">Gray</option>
    </select>
</form>

<script type="text/javascript">
  $('#color').simplecolorpicker();
</script>